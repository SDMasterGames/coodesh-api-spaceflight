{
  "openapi": "3.0.2",
  "info": {
    "title": "Back-end Challenge 2021",
    "version": "1.0"
  },
  "servers": [{ "url": "http://localhost:3000/v1" }],
  "components": {
    "schemas": {
      "Article": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "featured": { "type": "boolean", "default": false },
          "summary": { "type": "string" },
          "title": { "type": "string" },
          "url": { "type": "string" },
          "imageUrl": { "type": "string" },
          "newsSite": { "type": "string" },
          "publishedAt": { "type": "string" },
          "launches": {
            "type": "array",
            "properties": {
              "id": {
                "type": "string"
              },
              "provider": {
                "type": "string"
              }
            }
          },
          "events": {
            "type": "array",
            "properties": {
              "id": {
                "type": "string"
              },
              "provider": {
                "type": "string"
              }
            }
          }
        }
      },
      "CreateArticle": {
        "type": "object",
        "required": ["title", "url", "imageUrl", "newsSite", "publishedAt"],
        "properties": {
          "featured": { "type": "boolean", "default": false },
          "summary": { "type": "string" },
          "title": { "type": "string" },
          "url": { "type": "string" },
          "imageUrl": { "type": "string" },
          "newsSite": { "type": "string" },
          "publishedAt": { "type": "string" },
          "launches": {
            "type": "array",
            "properties": {
              "id": {
                "type": "string"
              },
              "provider": {
                "type": "string"
              }
            }
          },
          "events": {
            "type": "array",
            "properties": {
              "id": {
                "type": "string"
              },
              "provider": {
                "type": "string"
              }
            }
          }
        }
      },
      "UpdateArticle": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          }
        }
      },
      "error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          }
        }
      }
    },
    "parameters": {
      "limit": {
        "name": "limit",
        "description": "The maximum number of results to return",
        "in": "query",
        "schema": {
          "type": "integer"
        }
      },
      "page": {
        "name": "page",
        "description": "The page number to return",
        "in": "query",
        "schema": {
          "type": "integer"
        }
      },
      "id": {
        "name": "id",
        "description": "The id of the article",
        "in": "path",
        "required": true,
        "schema": {
          "type": "string"
        }
      }
    }
  },
  "tags": [
    {
      "name": "Articles",
      "description": "Operations about articles"
    },
    {
      "name": "Root",
      "description": "Back-end Challenge 2021 üèÖ - Space Flight News"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "tags": ["Root"],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "msg": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/articles": {
      "get": {
        "tags": ["Articles"],
        "parameters": [
          {
            "$ref": "#/components/parameters/limit"
          },
          {
            "$ref": "#/components/parameters/page"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Article"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Articles"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateArticle"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Article"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/error"
                }
              }
            }
          },
          "default": {
            "description": "Unexpected error while creating article",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/error"
                }
              }
            }
          }
        }
      }
    },
    "/articles/{id}": {
      "get": {
        "tags": ["Articles"],
        "parameters": [{ "$ref": "#/components/parameters/id" }],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Article"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/error"
                }
              }
            }
          },
          "default": {
            "description": "Unexpected error finding an article",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/error"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["Articles"],
        "parameters": [{ "$ref": "#/components/parameters/id" }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateArticle"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Article"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/error"
                }
              }
            }
          },
          "default": {
            "description": "Unexpected error deleting an article",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/error"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["Articles"],
        "parameters": [{ "$ref": "#/components/parameters/id" }],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Article"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/error"
                }
              }
            }
          },
          "default": {
            "description": "Unexpected error deleting an article",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/error"
                }
              }
            }
          }
        }
      }
    }
  }
}
